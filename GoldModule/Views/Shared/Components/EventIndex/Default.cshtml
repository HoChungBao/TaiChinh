@using Infrastructure.Util
@using Gold.Core.Entities
@model ReflectionIT.Mvc.Paging.IPagingList<Event>
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Tăng/Giảm</th>
            <th>Điểm</th>
            <th>Thế giới</th>
            <th>Ngày tạo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@(item.IsPositiveFake?"Tăng":"Giảm")</td>
            <td>@item.Point</td>
            <td>@(item.IsWorld?"Thế giới":"Trong nước")</td>
            <td>@StringUtil.GetDay(item.Date)</td>
            <td>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Update",item.Id)">Update</a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>